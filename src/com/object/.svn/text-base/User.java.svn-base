package com.object;


/**
 * User  est la classe répésentant tous les utilisateurs de type particulier du site
 * @author Team MyVegetable
 * @version 1.0
 */



public class User {
	
	/**
	 *  id de l'utilisateur 
	 */
	private int id_user;
	
	/**
	 * id d'un restaurateur 
	 */
	private int id_resto_account;
	
	/**
	 * nom d'un utilisateur
	 */
	private String Nom;
	
	/**
	 * prenom d'un utilisateur
	 */
	private String Prenom;
	
	/**
	 * login d'un utilisateur
	 */
	private String login;
	
	/**
	 * telephone d'un utilisateur
	 */
	private String phone;
	
	/**
	 * mot de passe d'un utilisateur
	 */
	private String password;
	
	/**
	 * email d'un utilisateur 
	 */
	private String email;
	
	/**
	 * nombre de commentaires faites par un utilisateurs 
	 */
	private int nb_commentaire;
	
	/**
	 * booleen qui permet d'activer ou de desactiver un utilisateur 
	 */
	private boolean annule;
	
	
	
	/* Setter */
	/**
	 * Mise à jour de l'id utilisateur 
	 * @param id_user
	 */
	
	public void setId_user(int id_user) {
		this.id_user = id_user;
	}
	
	/**
	 * Mise à jour de l'id du restaurateur 
	 * @param id_resto_account
	 */
	public void setId_resto_account(int id_resto_account) {
		this.id_resto_account = id_resto_account;
	}
	
	/**
	 * Mise à jour du nom de l'utilisateur
	 * @param Nom
	 */
	public void setNom_user(String Nom){
		this.Nom = Nom;
	}
	
	/**
	 * Mise à jour du prénom
	 * @param Prenom
	 */
	public void setPrenom_user(String Prenom){
		this.Prenom = Prenom;
	}
	
	/**
	 * Mise à jour du login d'un utilisateur 
	 * @param login
	 */
	public void setLogin(String login) {
		this.login = login;
	}
	
	/**
	 * Mise à jour du numero de telephone d'un utilisateur 
	 * @param phone
	 */
	public void setPhone(String phone) {
		this.phone = phone;
	}
	
	/**
	 * Mise à jour d'un mot de passe d'un utilisateur
	 * @param password
	 */
	public void setPassword(String password) {
		this.password = password;
	}
	
	/**
	 * Mise à jour de l'email d'un utilisateur 
	 * @param email
	 */
	public void setEmail(String email) {
		this.email = email;
	}
	
	/**
	 * Mise à jour du nombre de commentaire d'un utilisateur 
	 * @param nb_commentaire
	 */
	public void setNb_commentaire(int nb_commentaire) {
		this.nb_commentaire = nb_commentaire;
	}
	
	/**
	 * Mise à jour du nombre de commentaire
	 * @param annule
	 */
	public void setAnnule(boolean annule) {
		this.annule = annule;
	}
	
	
	/* Getter */
	
	/**
	 * retourne l'id de l'utilisateur 
	 * @return  l'id de l'utilisateur 
	 */
	
	public int getId_user() {
		return id_user;
	}
	
	/**
	 * retourne l'id du restaurateur 
	 * @return
	 */
	public int getId_resto_account() {
		return id_resto_account;
	}
	
	/**
	 * retourne le nom de l'utilisateur 
	 * @return  le nom de l'utilisateur 
	 */
	public String getNom() {
		return Nom;
	}
	
	/**
	 * retourne le prenom de l'utilisateur 
	 * @return  le prenom de l'utilisateur 
	 */
	public String getPrenom() {
		return Prenom;
	}
	
	/**
	 * retourne le login de l'utilisateur 
	 * @return  login 
	 */
	public String getLogin() {
		return login;
	}
	
	/**
	 * retourne le mot de passe  de l'utilisateur
	 * @return  le mot de passe
	 */
	public String getPassword() {
		return password;
	}
	
	/**
	 * retourne le numéro de téléphone   de l'utilisateur
	 * @return  le numéro de téléphone
	 */
	public String getPhone() {
		return phone;
	}
	
	/**
	 * retourne l'email de l'utilisateur
	 * @return  l'email
	 */
	public String getEmail() {
		return email;
	}
	
	/**
	 * retourne le nombre de commentaire  de l'utilisateur
	 * @return  le nombre de commentaire
	 */
	public int  getNb_commentaire() {
		return nb_commentaire;
	}
	
	/**
	 * retourne le booleen d'activation ou de desactivation  de l'utilisateur
	 * @return
	 */
	public boolean isAnnule() {
		return annule;
	}
	
}
